function titleCase(str) {
  str = str.toLowerCase();
  var arr = str.split(" ");
  for(var i=0; i<arr.length;i++ ){
    var arrWords = str.split("");
    var first = /\^/; 
    arr[i].replace(i,1, first.toUpperCase());  
    arrWords.join("");
  }

  return arr.join(" ");

}

titleCase("i'm A little tEaeeeee pot");

